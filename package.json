{
  "name": "re-turbo",
  "scripts": {
    "start": "./lib/bs/bytecode/indexhot.byte",
    "start:native": "./lib/bs/native/index.native",
    "build": "bsb -make-world",
    "build:watch": "bsb -make-world -w && refmt",
    "build:web": "bsb -make-world -w -backend js",
    "build:native": "bsb -make-world -backend native",
    "clean": "bsb -clean-world",
    "refmt": "bsrefmt src/* --in-place",
    "webpack": "webpack -w --entry ./lib/js/src/index.js --output public/index.js --mode development",
    "start:server": "webpack-dev-server --hot --entry ./lib/js/src/index.js --output public/index.js --mode development --content public/ --content-base public/",
    "opts": "webpack-dev-server -h"
  },
  "dependencies": {
    "reprocessing": "^0.3.1"
  },
  "devDependencies": {
    "bsb-native": "4.0.7000",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0"
  }
}
