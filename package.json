{
  "name": "re-turbo",
  "scripts": {
    "build": "bsb -make-world",
    "clean": "bsb -clean-world",
    "refmt": "bsrefmt src/* --in-place",
    "webpack": "webpack -w --entry ./lib/js/src/index.js --output public/index.js --mode development",
    "serve": "webpack-dev-server --hot --entry ./lib/js/src/index.js --output public/index.js --mode development --content public/ --content-base public/",
    "start": "run-p build serve"
  },
  "dependencies": {
    "reprocessing": "^0.3.1"
  },
  "devDependencies": {
    "bsb-native": "4.0.7000",
    "npm-run-all": "^4.1.5",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0"
  }
}
